= form_with model: [:admin, @user], class: "space-y-6" do |f|
  %div
    = f.label :email, class: "block text-sm font-medium text-gray-700"
    = f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900 sm:text-sm"

  %div
    = f.label :password, class: "block text-sm font-medium text-gray-700"
    = f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900 sm:text-sm", autocomplete: "new-password"

  %div
    = f.label :password_confirmation, class: "block text-sm font-medium text-gray-700"
    = f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900 sm:text-sm", autocomplete: "new-password"

  .flex.items-center.gap-2
    = f.check_box :admin, class: "rounded border-gray-300 text-gray-900 focus:ring-gray-900"
    = f.label :admin, class: "text-sm font-medium text-gray-700"

  .flex.gap-4.pt-4
    = f.submit(@user.persisted? ? "Update User" : "Create User", class: "px-5 py-2.5 bg-gray-900 hover:bg-gray-800 text-white text-sm font-medium rounded-md transition-colors")
    = link_to "Cancel", admin_users_path, class: "px-5 py-2.5 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 text-sm font-medium rounded-md transition-colors"