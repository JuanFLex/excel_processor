.bg-gray-50.min-h-screen
  .max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8.py-8.lg:py-12
  
  -# Page Header
  .mb-8
    %h1.text-3xl.font-bold.text-gray-900 Users Management
    %p.mt-2.text-gray-600 Manage all user accounts in the system
  
  .bg-white.shadow-xl.rounded-xl.overflow-hidden
  
    -# Controls Section
    .p-6.border-b.border-gray-200
      .flex.flex-col.sm:flex-row.sm:items-center.sm:justify-between.gap-4
        .flex-1
          .relative
            %input.w-full.md:w-80.px-4.py-2.rounded-lg.border.border-gray-300.focus:outline-none.focus:ring-2.focus:ring-blue-500.focus:border-transparent{type: "text", placeholder: "Search users..."}
        
        .flex.items-center.gap-3
          = link_to "New User", new_admin_user_path, class: "px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm"
          = link_to "Export", "#", class: "px-5 py-2.5 bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 text-sm font-medium rounded-lg transition-colors shadow-sm"
  
    -# Users Table Section
    - if @users.any?
      .overflow-x-auto
        %table.min-w-full.divide-y.divide-gray-200
          %thead.bg-blue-50
            %tr
              %th.px-6.py-4.text-left.text-xs.font-semibold.text-gray-700.uppercase.tracking-wider Email
              %th.px-6.py-4.text-left.text-xs.font-semibold.text-gray-700.uppercase.tracking-wider Role
              %th.px-6.py-4.text-left.text-xs.font-semibold.text-gray-700.uppercase.tracking-wider Status
              %th.px-6.py-4.text-right.text-xs.font-semibold.text-gray-700.uppercase.tracking-wider Actions
          
          %tbody.bg-white.divide-y.divide-gray-200
            - @users.each do |user|
              %tr.hover:bg-gray-50.transition-colors
                %td.px-6.py-4.whitespace-nowrap
                  .flex.items-center
                    .flex-shrink-0.h-10.w-10
                      .h-10.w-10.rounded-full.bg-blue-100.flex.items-center.justify-center
                        %span.text-blue-800.font-medium= user.id
                    .ml-10
                      .text-sm.font-medium.text-gray-900= user.email
                
                %td.px-6.py-4.whitespace-nowrap
                  .flex.items-center.justify-center
                    .text-sm.text-gray-900
                      - if user.admin?
                        .inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-red-100.text-red-800 Admin
                      - else
                        .inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-gray-100.text-gray-800 User
                
                %td.px-6.py-4.whitespace-nowrap
                  .flex.items-center.justify-center
                    .text-sm.text-gray-900
                      - if user.respond_to?(:active?) && user.active?
                        .inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-green-100.text-green-800 Active
                      - else
                        .inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-yellow-100.text-yellow-800 Inactive
                
                %td.px-6.py-4.whitespace-nowrap.text-right
                  .flex.items-center.justify-end.space-x-3
                    = link_to "Edit", edit_admin_user_path(user), class: "px-3 py-1.5 text-sm text-blue-600 hover:text-blue-900 font-medium transition-colors rounded hover:bg-blue-50"
                    = link_to "View", admin_user_path(user), class: "px-3 py-1.5 text-sm text-gray-600 hover:text-gray-900 font-medium transition-colors rounded hover:bg-gray-50"
                    = link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "px-3 py-1.5 text-sm text-red-600 hover:text-red-900 font-medium transition-colors rounded hover:bg-red-50"
      
      -# Pagination Controls
      .bg-gray-50.px-4.py-3.flex.items-center.justify-between.border-t.border-gray-200.sm:px-6
        .flex-1.flex
          %button.relative.inline-flex.items-center.px-4.py-2.border.border-gray-300.text-sm.font-medium.rounded-md.text-gray-700.bg-white.hover:bg-gray-50 Previous
        .flex-1.flex.justify-center.sm:justify-start
          .text-sm.text-gray-700
            Showing
            %span.font-medium 1
            to
            %span.font-medium= @users.count
            of
            %span.font-medium= @users.count
            results
        .flex-1.flex.justify-end
          %button.relative.inline-flex.items-center.px-4.py-2.border.border-gray-300.text-sm.font-medium.rounded-md.text-gray-700.bg-white.hover:bg-gray-50 Next
    - else
      .text-center.py-16
        .flex.justify-center.mb-6
          %svg.h-16.w-16.text-gray-300.mx-auto{fill: "none", stroke: "currentColor", viewBox: "0 0 24 24"}
            %path{d: "M12 4.75a.75.75 0 01.75.75v13a.75.75 0 01-1.5 0V5.5a.75.75 0 01.75-.75zM4.75 12a.75.75 0 01.75.75v5.5a.75.75 0 00.75.75h11a.75.75 0 00.75-.75v-5.5a.75.75 0 011.5 0v5.5A2.25 2.25 0 0117.25 19.5H6.75A2.25 2.25 0 014.5 17.25v-5.5a.75.75 0 01.75-.75zM19.25 12a.75.75 0 01.75.75v3a2.25 2.25 0 01-2.25 2.25H6.25A2.25 2.25 0 014 15.75v-3c0 .414.336.75.75.75h11.5a.75.75 0 00.75-.75v-3a.75.75 0 01.75-.75z"}
        %h3.text-lg.font-medium.text-gray-900.mb-1 No users found
        %p.text-gray-500.mb-6 Get started by creating a new user
        = link_to "Add User", new_admin_user_path, class: "inline-block px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors shadow-sm"