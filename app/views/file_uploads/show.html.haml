        document.getElementById('opportunityModal').classList.remove('hidden');
        document.getElementById('opportunityNumber').focus();
        setupOpportunityLookup();
      }

      function closeOpportunityModal() {
        document.getElementById('opportunityModal').classList.add('hidden');
        document.getElementById('opportunityNumber').value = '';
        document.getElementById('opportunityError').classList.add('hidden');
        document.getElementById('opportunityStatus').classList.add('hidden');
        document.getElementById('opportunityData').classList.add('hidden');
        clearTimeout(lookupTimeout);
        opportunityData = null;
      }

      function setupOpportunityLookup() {
        const input = document.getElementById('opportunityNumber');

        input.addEventListener('input', function() {
          const value = input.value.trim();

          // Clear previous timeout
          clearTimeout(lookupTimeout);

          // Reset displays
          document.getElementById('opportunityError').classList.add('hidden');
          document.getElementById('opportunityStatus').classList.add('hidden');
          document.getElementById('opportunityData').classList.add('hidden');

          // If empty or less than 5 digits, don't lookup
          if (!value || value.length < 5 || !/^\d+$/.test(value)) {
            opportunityData = null;
            return;
          }

          // Show loading after 1 second without typing
          lookupTimeout = setTimeout(() => {
            lookupOpportunity(value);
          }, 1000);
        });
      }

      function lookupOpportunity(opportunityNumber) {
        const statusDiv = document.getElementById('opportunityStatus');
        statusDiv.textContent = 'Looking up opportunity...';
        statusDiv.classList.remove('hidden');

        // Get CSRF token
        const token = document.querySelector('[name="csrf-token"]').content;

        fetch('/file_uploads/lookup_opportunity', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': token
          },
          body: JSON.stringify({ opportunity_number: opportunityNumber })
        })
        .then(response => response.json())
        .then(data => {
          statusDiv.classList.add('hidden');

          if (data.success && data.data) {
            // Show opportunity data
            opportunityData = data.data;
            displayOpportunityData(data.data);
          } else {
            // Show not found message
            statusDiv.textContent = 'Opportunity not found (optional - can send without)';
            statusDiv.className = 'text-xs text-amber-600 mt-1';
            statusDiv.classList.remove('hidden');
            opportunityData = null;
          }
        })
        .catch(error => {
          console.error('Lookup error:', error);
          statusDiv.textContent = 'Lookup failed (optional - can send without)';
          statusDiv.className = 'text-xs text-amber-600 mt-1';
          statusDiv.classList.remove('hidden');
          opportunityData = null;
        });
      }

      function displayOpportunityData(data) {
        // Update all the display fields
        document.getElementById('oppCustomer').textContent = data.customer || '-';
        document.getElementById('oppStage').textContent = data.stage || '-';
        document.getElementById('oppProbability').textContent = data.probability ? data.probability + '%' : '-';
        document.getElementById('oppEar').textContent = data.ear ? '$' + data.ear + 'M' : '-';
        document.getElementById('oppBu').textContent = data.bu || '-';
        document.getElementById('oppBdOwner').textContent = data.bd_owner || '-';
        document.getElementById('oppDeadline').textContent = data.targeted_quote_deadline || '-';
        document.getElementById('oppSopDate').textContent = data.sop_date || '-';
        document.getElementById('oppSite').textContent = data.site_1 || '-';
        document.getElementById('oppName').textContent = data.opportunity_name || '-';

        // Show the data panel
        document.getElementById('opportunityData').classList.remove('hidden');
      }

      function validateAndSendQuote() {
        const opportunityNumber = document.getElementById('opportunityNumber').value.trim();
        const errorDiv = document.getElementById('opportunityError');

        // If empty, allow sending (optional field)
        if (!opportunityNumber) {
          sendQuoteEmail('', null);
          closeOpportunityModal();
          return;
        }

        // If has value, validate it
        if (opportunityNumber.length < 5 || !/^\d+$/.test(opportunityNumber)) {
          errorDiv.textContent = 'Please enter a valid number with at least 5 digits';
          errorDiv.classList.remove('hidden');
          return;
        }

        // Hide error and send email
        errorDiv.classList.add('hidden');
        sendQuoteEmail(opportunityNumber, opportunityData);
        closeOpportunityModal();
      }

