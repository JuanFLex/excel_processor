      let lookupTimeout = null;

      function openOpportunityModal() {
        // Generate email data using centralized configuration
        emailData = {
          to: #{ExcelProcessorConfig::EMAIL_CONFIG[:opportunity_to].to_json},
          cc: #{ExcelProcessorConfig::EMAIL_CONFIG[:opportunity_cc].to_json},
