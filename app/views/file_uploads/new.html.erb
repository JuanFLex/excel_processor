<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Upload Excel File</h1>
  
  <div class="mb-4">
    <%= link_to "← Back to list", file_uploads_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
  
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form_with(url: file_uploads_path, method: :post, local: true, multipart: true, scope: :file_upload) do |form| %>
      <div class="mb-6">
        <p class="mb-4 text-gray-700">The system will process the Excel file and generate a new file with the following columns:</p>
        <ul class="list-disc pl-5 mb-4 text-gray-600">
          <li>SUGAR_ID</li>
          <li>ITEM</li>
          <li>MFG_PARTNO</li>
          <li>GLOBAL_MFG_NAME</li>
          <li>DESCRIPTION</li>
          <li>SITE</li>
          <li>STD_COST</li>
          <li>LAST_PURCHASE_PRICE</li>
          <li>LAST_PO</li>
          <li>EAU</li>
          <li>Commodity (AI generated)</li>
          <li>Scope (AI generated)</li>
        </ul>
        <p class="text-gray-700 mb-2">Select an Excel file (.xlsx, .xls) or CSV (.csv):</p>
        <%= form.file_field :file, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100", accept: ".xlsx,.xls,.csv", required: true %>
      </div>
      
      <div class="flex items-center justify-between">
        <%= form.submit "Process File", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>