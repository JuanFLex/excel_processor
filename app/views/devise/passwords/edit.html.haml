.container.mx-auto.px-4.py-12
  .flex.justify-center.items-center.min-h-[70vh]
    .w-full.max-w-md
      .bg-white.rounded-2xl.shadow-lg.p-10
        .text-center.mb-8
          %h2.text-3xl.font-bold.text-gray-900
            Change your password
          %p.mt-2.text-gray-600
            Enter your new password

        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = render "devise/shared/error_messages", resource: resource
          = f.hidden_field :reset_password_token
          
          .space-y-6
            .field
              = f.label :password, "New password", class: "block text-sm.font-medium.text-gray-700.mb-1"
              - if @minimum_password_length
                %p.text-xs.text-gray-500.mb-1 #{@minimum_password_length} characters minimum
              = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full.px-4.py-3.border.border-gray-300.rounded-lg.focus:ring-2.focus:ring-primary-600.focus:border-primary-500.transition.duration-200.placeholder-gray-400"

            .field
              = f.label :password_confirmation, "Confirm new password", class: "block text-sm.font-medium.text-gray-700.mb-1"
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full.px-4.py-3.border.border-gray-300.rounded-lg.focus:ring-2.focus:ring-primary-600.focus:border-primary-500.transition.duration-200.placeholder-gray-400"

            .mt-6
              = f.submit "Change my password", class: "w-full.py-3.px-4.bg-primary-600.hover:bg-primary-700.text-white.font-medium.rounded-lg.transition.duration-200.ease-in-out.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-primary-500"

        .mt-8.text-center
          = link_to "‚Üê Back to homepage", root_path, class: "text-sm.text-gray-500.hover:text-gray-700.transition.duration-200"