.container.mx-auto.px-4.py-8
  .max-w-2xl.mx-auto
    .bg-white.rounded-2xl.shadow-lg.p-8
      %h2.text-2xl.font-bold.text-gray-900.mb-6
        Edit #{resource_name.to_s.humanize}

      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        
        .space-y-6
          .field
            = f.label :email, class: "block text-sm.font-medium.text-gray-700.mb-1"
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full.px-4.py-3.border.border-gray-300.rounded-lg.focus:ring-2.focus:ring-primary-600.focus:border-primary-500.transition.duration-200.placeholder-gray-400"

          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            .bg-blue-50.text-blue-700.px-4.py-3.rounded.mb-4
              Currently waiting confirmation for: #{resource.unconfirmed_email}

          .field
            = f.label :password, class: "block text-sm.font-medium.text-gray-700.mb-1"
            %p.text-sm.text-gray-500.mb-1 (leave blank if you don't want to change it)
            = f.password_field :password, autocomplete: "new-password", class: "w-full.px-4.py-3.border.border-gray-300.rounded-lg.focus:ring-2.focus:ring-primary-600.focus:border-primary-500.transition.duration-200.placeholder-gray-400"
            - if @minimum_password_length
              %p.text-xs.text-gray-500.mt-1 #{@minimum_password_length} characters minimum

          .field
            = f.label :password_confirmation, class: "block text-sm.font-medium.text-gray-700.mb-1"
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full.px-4.py-3.border.border-gray-300.rounded-lg.focus:ring-2.focus:ring-primary-600.focus:border-primary-500.transition.duration-200.placeholder-gray-400"

          .field
            = f.label :current_password, class: "block text-sm.font-medium.text-gray-700.mb-1"
            %p.text-sm.text-gray-500.mb-1 (we need your current password to confirm your changes)
            = f.password_field :current_password, autocomplete: "current-password", class: "w-full.px-4.py-3.border.border-gray-300.rounded-lg.focus:ring-2.focus:ring-primary-600.focus:border-primary-500.transition.duration-200.placeholder-gray-400"

          .mt-6
            = f.submit "Update", class: "px-6.py-3.bg-primary-600.hover:bg-primary-700.text-white.font-medium.rounded-lg.transition.duration-200.ease-in-out.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-primary-500"

      .mt-8.pt-6.border-t.border-gray-200
        %h3.text-xl.font-medium.text-gray-900.mb-4
          Cancel my account

        .bg-red-50.p-4.rounded-lg.mb-6
          %p.text-red-700.mb-4 Unhappy? We'll be sad to see you go.
          = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "px-6.py-3.bg-red-600.hover:bg-red-700.text-white.font-medium.rounded-lg.transition.duration-200.ease-in-out.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-red-500"

      .mt-4
        = link_to "← Back", :back, class: "text-primary-600.hover:text-primary-700.font-medium.transition.duration-200"

      .mt-4
        = link_to "← Back to homepage", root_path, class: "text-sm.text-gray-500.hover:text-gray-700.transition.duration-200"