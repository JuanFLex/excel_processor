<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Referencias de Commodities</h1>
  
  <div class="mb-6">
    <%= link_to "← Volver a Inicio", root_path, class: "text-blue-500 hover:text-blue-700 mr-4" %>
    <%= link_to "Subir archivo de referencias", upload_commodity_references_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
  
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full">
      <thead>
        <tr class="bg-gray-100 border-b">
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">GLOBAL_COMM_CODE_DESC</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">LEVEL1_DESC</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">LEVEL2_DESC</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">LEVEL3_DESC</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Infinex Scope Status</th>
        </tr>
      </thead>
      <tbody>
        <% @commodities.each do |commodity| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= commodity.global_comm_code_desc %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= commodity.level1_desc %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= commodity.level2_desc %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= commodity.level3_desc %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= commodity.infinex_scope_status == 'In Scope' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= commodity.infinex_scope_status %>
              </span>
            </td>
          </tr>
        <% end %>
        
        <% if @commodities.empty? %>
          <tr>
            <td colspan="5" class="px-6 py-4 text-center text-gray-500">
              No hay referencias de commodities aún. Por favor, suba un archivo de referencias.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="mt-4">
    <%= paginate @commodities %>
  </div>
</div>