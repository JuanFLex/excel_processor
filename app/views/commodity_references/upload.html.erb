<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Upload Commodity References File</h1>
  
  <div class="mb-4">
    <%= link_to "← Back to References", commodity_references_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
  
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <%= form_with(url: process_upload_commodity_references_path, method: :post, local: true, multipart: true) do |form| %>
      <div class="mb-6">
        <p class="mb-4 text-gray-700">Upload a CSV file with the following columns:</p>
        <ul class="list-disc pl-5 mb-4 text-gray-600">
          <li>GLOBAL_COMM_CODE_DESC</li>
          <li>LEVEL1_DESC</li>
          <li>LEVEL2_DESC</li>
          <li>LEVEL3_DESC</li>
          <li>Infinex Scope Status</li>
        </ul>
        <p class="text-sm text-gray-500 mb-4">This file will be used as a reference to classify processed items.</p>
        <p class="text-gray-700 mb-2">Select a CSV file (.csv):</p>
        <%= form.file_field :file, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100", accept: ".csv", required: true %>
      </div>
      
      <div class="flex items-center justify-between">
        <%= form.submit "Process File", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>